local never = 1
repeat

-- Obtener el ScrollingFrame original
local scrollingFrame1 = game.Players.LocalPlayer.PlayerGui.GUI.Animations.ScrollingFrame

-- Obtener el ScrollingFrame en Animations2.Folder si existe
local scrollingFrame2 = game.Players.LocalPlayer.PlayerGui.GUI:FindFirstChild("Animations2")

-- Funci贸n para hacer visibles todos los TextButton dentro del ScrollingFrame
local function asegurarVisibilidad(scrollingFrame)
    for _, child in ipairs(scrollingFrame:GetChildren()) do
        if child:IsA("TextButton") then
            -- Asegurar que el TextButton sea visible
            child.Visible = true
        end
    end
end

-- Funci贸n para verificar y asegurar la visibilidad cada 0.1 segundos
local function verificarCada0_1Segundos()
    while true do
        asegurarVisibilidad(scrollingFrame1)
        if scrollingFrame2 then
            asegurarVisibilidad(scrollingFrame2.Folder)
        end
        wait(0.1)  -- Esperar 0.1 segundos antes de volver a verificar
    end
end

-- Llamar a la funci贸n para iniciar la verificaci贸n continua
verificarCada0_1Segundos()

until never == 0